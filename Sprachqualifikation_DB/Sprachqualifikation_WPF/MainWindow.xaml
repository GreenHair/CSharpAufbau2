<Window x:Class="Sprachqualifikation_WPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Sprachqualifikation_WPF"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="30*"/>
            <RowDefinition Height="30*"/>
            <RowDefinition Height="40*"/>            
        </Grid.RowDefinitions>
        <Button Name="btnAllePersonen" Content="Alle Personen" Grid.Row="0" Click="btnAllePersonen_Click"/>
        <Button Name="btnNeuePerson" Content="Neue Person" Grid.Row="1" Click="btnNeuePerson_Click"/>
        <Button Name="btnSuchPerson" Content="Suche Person" Grid.Row="2" Click="btnSuchPerson_Click"/>

    </Grid>
</Window>
